#define pinLed 3
#define button 0
int controle = 0; 
int ligado = 0;


void setup() { 
  Serial.begin (9600); // inicia a comunicação serial
  pinMode (button, INPUT); // define o pino 
  pinMode (pinLed, OUTPUT);
} 

void loop() {
  ligado = digitalRead(button);
  if (ligado = HIGH){
  digitalWrite(pinLed, HIGH)
}
  
